                <input asp-for="CreateGameVM.Genre" class="form-control" />
                <span asp-validation-for="CreateGameVM.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateGameVM.CoverPhoto" class="control-label"></label>
